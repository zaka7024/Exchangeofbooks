<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/mainColorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Colors used in this theme, must be in attrs file -->
        <item name="backgroundColor">#ffffff</item>
        <item name="buttonColor">#6675ef</item>
        <item name="textColor">#0c85c2</item>
        <item name="textHintColor">#bdc3c7</item>
        <item name="mainColor">#00b5cc</item>
        <!-- Support library compatibility -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowTransitionBackgroundFadeDuration" tools:ignore="NewApi">1000</item>

    </style>
    <!-- Dark application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">#064168</item>
        <item name="colorPrimaryDark">#09251f</item>
        <!-- Colors used in this theme -->
        <item name="backgroundColor">#999595</item>
        <item name="buttonColor">#adba1f</item>
        <item name="textColor">#094303</item>
        <item name="mainColor">#05626e</item>

        <item name="textHintColor">#acb0b3</item>

        <!-- Support library compatibility -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowTransitionBackgroundFadeDuration" tools:ignore="NewApi">1000</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#0fbcf9</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <!-- EditTextStyle[Comments Activity] -->
    <style name="edit_text_style">
        <item name="android:textColorHint">@color/irisBlue</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/mainColorBlue</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/white</item>
    </style>
    
    <!-- -->
    <style name="rating_bar_style">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#EEEEEE</item>
        <item name="android:numStars">5</item>
    </style>
    
</resources>
