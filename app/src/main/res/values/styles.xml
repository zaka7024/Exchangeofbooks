<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/mainColorBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Colors used in this theme, must be in attrs file -->
        <item name="backgroundColor">#ffffff</item>
        <item name="buttonColor">@color/mainColorBlue</item>
        <item name="textColor">#0c85c2</item>
        <item name="textHintColor">#bdc3c7</item>
        <item name="mainColor">#00b5cc</item>
        <item name="commentsBackground">#e4f1fe</item>
        <item name="commentEditTextBackground">#FFF</item>
        <item name="editTextBorderColor">@color/mainColorBlue</item>
        <!-- Support library compatibility -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowTransitionBackgroundFadeDuration" tools:ignore="NewApi">1000</item>

    </style>
    <!-- Dark application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">#2a2a2a</item>
        <item name="colorPrimaryDark">#2e3131</item> <!-- Main -->
        <!-- Colors used in this theme -->
        <item name="backgroundColor">#444444</item>
        <item name="buttonColor">#2d2d2d</item>
        <item name="textColor">#FFF</item>
        <item name="mainColor">#2d2d2d</item>
        <item name="textHintColor">#acb0b3</item>
        <item name="commentsBackground">#444444</item>
        <item name="commentEditTextBackground">#444444</item>
        <item name="editTextBorderColor">@color/white</item>
        <!-- Support library compatibility -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowTransitionBackgroundFadeDuration" tools:ignore="NewApi">1000</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#0fbcf9</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <!-- EditTextStyle[Comments Activity] -->
    <style name="edit_text_style">
        <item name="android:textColorHint">@color/irisBlue</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/mainColorBlue</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/white</item>
    </style>
    
    <!-- -->
    <style name="rating_bar_style">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#EEEEEE</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="questions_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?attr/mainColor</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="answers_Style">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">?attr/backgroundColor</item>
    </style>

</resources>
